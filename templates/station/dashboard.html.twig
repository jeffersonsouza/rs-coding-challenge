{% extends 'base.html.twig' %}

{% block title %}
    {{station.name}} Dashboard
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Equipment Name</th>
                <th scope="col">Quantity Booked</th>
                <th scope="col">Quantity Available</th>
            </tr>
        </thead>
        <tbody>
        {% for day in dashboardData %}
            <tr class="center">
                <th colspan="3">Bookings for {{ day.date }}</th>
            </tr>
            {% for equipment in day.equipments %}
            <tr>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.quantity_booked }}</td>
                <td>{{ equipment.quantity_available }}</td>
            </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
