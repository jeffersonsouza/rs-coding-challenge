{% extends 'base.html.twig' %}

{% block title %}
    Stations
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Stations</th>
            </tr>
        </thead>
        <tbody>
        {% for station in stations %}
            <tr>
                <td>
                    <a href="{{ path('station_dashboard', { uuid: station.uuid }, relative = false) }}">{{ station.name }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
